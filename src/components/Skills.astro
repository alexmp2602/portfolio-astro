---
import AstroIcon from "./icons/AstroIcon.astro";
import React from "./icons/React.astro";
import Next from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
---

<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
  <div
    class="bg-neutral-100 dark:bg-neutral-950 rounded-lg shadow-lg p-4 flex flex-col items-center"
  >
    <AstroIcon class="size-12 mb-4" />
    <span class="text-xl font-semibold">Astro</span>
  </div>
  <div
    class="bg-neutral-100 dark:bg-neutral-950 rounded-lg shadow-lg p-4 flex flex-col items-center"
  >
  <Next class="size-12 mb-4" />
    <span class="text-xl font-semibold">NextJS</span>
  </div>
  <div
    class="bg-neutral-100 dark:bg-neutral-950 rounded-lg shadow-lg p-4 flex flex-col items-center"
  >
    <React class="size-12 mb-4" />
    <span class="text-xl font-semibold">React</span>
  </div>
  <div
    class="bg-neutral-100 dark:bg-neutral-950 rounded-lg shadow-lg p-4 flex flex-col items-center"
  >
  <Tailwind class="size-12 mb-4" />
    <span class="text-xl font-semibold">Tailwind</span>
  </div>
</div>
