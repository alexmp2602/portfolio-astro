---
import Layout from "../layouts/Layout.astro";
import AboutMe from "../components/AboutMe.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/Code.astro";
import Experience from "../components/Experience.astro";
import ProfileCheck from "../components/icons/ProfileCheck.astro";
import Projects from "../components/Projects.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Tools from "../components/icons/Tools.astro";
import Skills from "../components/Skills.astro";
import Hero from "../components/Hero.astro";
---

<Layout
  title="Alex Pereyra - Desarrollador Frontend"
  description="Soy un Desarrollador Frontend con más de un año de experiencia. Me especializo en crear aplicaciones únicas, rápidas y escalables."
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero>
        <slot />
      </Hero>
    </SectionContainer>
    <div class="space-y-24">
    <SectionContainer id="experiencia">
      <h2
      class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <Briefcase class="size-8" /> Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>
    <div class="space-y-24">
    <SectionContainer id="proyectos">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-4 text-black/80 dark:text-white"
      >
        <CodeIcon class="size-8" /> Proyectos
      </h2>
      <Projects />
    </SectionContainer>
    <div class="space-y-24">
    <SectionContainer id="habilidades">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-4 text-black/80 dark:text-white"
      >
        <Tools class="size-8" /> Habilidades
      </h2>
      <Skills />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-4 text-black/80 dark:text-white"
      >
        <ProfileCheck class="size-8" />
        Sobre mi
      </h2>
      <AboutMe />
    </SectionContainer>

    
  </main>
</Layout>
