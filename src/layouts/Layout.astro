---
import "@fontsource-variable/onest"

import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"

interface Props {
  title: string
  description: string
}

const { description, title } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/profile.webp" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="relative text-black dark:text-white">
    <div
      class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-neutral-100 dark:bg-neutral-950
      bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(217,216,255,0.5),rgba(255,255,255,0.9))]
      dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
      color-scheme: light dark;

      /* Paleta "Flavor-Full" del "Color Of The Year 2024 - Pantone" */
      --color-year: #ffbe98; /* Peach Fuzz */
      --color-complementary: #ca9456; /* Honey Yellow */
      --color-complementary-2: #97754c; /* Dijon */
      --color-complementary-3: #babc72; /* Green Banana */
      --color-complementary-4: #2c333e; /* Blueberry */
      --color-complementary-5: #8398ca; /* Grapemist */
      --color-complementary-6: #c54966; /* Party Punch */
      --color-complementary-7: #cdb127; /* Mango Mint */
    }

  html {
    font-family: "Onest Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    color: rgba(17, 17, 17, 0.9);
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    overscroll-behavior: none;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }

  @media (prefers-color-scheme: dark) {
    body {
      color: rgba(255, 255, 255, 0.9);
    }
  }

  /* Colores de texto */
  .text-color-year {
      color: var(--color-year);
    }

    .text-color-complementary {
      color: var(--color-complementary);
    }

    .text-color-complementary-2 {
      color: var(--color-complementary-2);
    }

    .text-color-complementary-3 {
      color: var(--color-complementary-3);
    }

    .text-color-complementary-4 {
      color: var(--color-complementary-4);
    }

    .text-color-complementary-5 {
      color: var(--color-complementary-5);
    }

    .text-color-complementary-6 {
      color: var(--color-complementary-6);
    }

    .text-color-complementary-7 {
      color: var(--color-complementary-7);
    }

    /* Estilo para los enlaces al pasar el rat√≥n */
    a:hover {
      color: var(--color-complementary-6);
    }
</style>